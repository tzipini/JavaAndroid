<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">#cbdea7</item>


    </style>

    <style name="Styles.Screens.Main.Button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">216dp</item>
        <item name="android:layout_marginStart">96dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_height">67dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="Styles.General.Title" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">50dp</item>
        <item name="android:textColor">#2589b4</item>

    </style>

    <style name="Styles.General.Edit" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24dp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="Styles.General.Lists.View" parent="Styles.General.Edit">
        <item name="android:gravity">left</item>
        <item name="android:textSize">14dp</item>

    </style>


    <style name="Styles.General.Lists.Title" parent="Styles.General.Edit">
        <item name="android:gravity">right</item>
        <item name="android:textSize">22dp</item>
    </style>


    <style name="Styles.General.Spinner" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ems">10</item>

    </style>
</resources>

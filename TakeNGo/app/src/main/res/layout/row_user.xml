<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/_id"
        style="@style/Styles.General.Lists.View"
        android:text="@string/lists.user.userId" />
    <TextView
        android:id="@+id/identityNo"
        style="@style/Styles.General.Lists.View"
        android:text="@string/lists.user.identityNo" />
    <TextView
        android:id="@+id/firstName"
        style="@style/Styles.General.Lists.View"
        android:text="@string/lists.user.firstName" />
    <TextView
        android:id="@+id/lastName"
        style="@style/Styles.General.Lists.View"
        android:text="@string/lists.user.lastName" />
    <TextView
        android:id="@+id/tel"
        style="@style/Styles.General.Lists.View"
        android:text="@string/lists.user.tel" />

    <TextView
        android:id="@+id/email"
        style="@style/Styles.General.Lists.View"
        android:text="@string/lists.user.email" />

    <TextView
        android:id="@+id/password"
        android:inputType="textPassword"
        style="@style/Styles.General.Lists.View"
        android:text="@string/lists.user.password" />

</LinearLayout>